@model HotelGame.WebMVC.Models.GamePlay.GetAllPlayerRoomsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Users/Views/Shared/_UserLayout.cshtml";
}

@if (Model.CheckPlayerHotel == true)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Otel Macerasına Başla</h5>
            <p>İlk Otelini Eklemek İçin Oteline Bir İsim Ver !!!!</p>

            <!-- Vertically centered Modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#verticalycentered">
                Ekle
            </button>
            <div class="modal fade" id="verticalycentered" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Lütfen Otel Adını Yaz</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form class="row g-3" asp-controller="Dashboard" asp-action="HotelCreater" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-12">
                                    <label for="inputName4" class="form-label">Otel Adı</label>
                                    <input asp-for="HotelName" id="Name" type="text" class="form-control" placeholder="Benim Güzel Otelim">
                                    <span asp-validation-for="HotelName" class="text-danger"></span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                    <button type="submit" class="btn btn-primary" value="Add">Oteli Oluştur</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="grid-container">
        @for (var i = 0; i < Model.PlayerRooms.Count; i++)
        {
            var item = Model.PlayerRooms[i];
            <div class="grid-item grid-item-@i" data-room-id="@item.Id">
                <a href="/Users/PlayerRoom/GetRoomDetail/@item.Id">
                    <img src="~/img/room.png" alt="Room Image" />
                    <span>
                        <text>@item.RoomType.Name</text>
                    </span>
                </a>
            </div>
        }
    </div>
