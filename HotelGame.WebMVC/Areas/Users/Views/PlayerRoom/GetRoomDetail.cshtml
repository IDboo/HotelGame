@model HotelGame.WebMVC.Models.GamePlay.GetAllPlayerRoomsViewModel
@{
    ViewData["Title"] = "GetRoomDetail";
    Layout = "~/Areas/Users/Views/Shared/_UserLayout.cshtml";
}

<div class="baccontainer">
    <h1 class="title">Oda Detayları</h1>

    @if (Model.PlayerRoomMaterials != null && Model.PlayerRoomMaterials.Count > 0)
    {
        foreach (var item in Model.PlayerRoomMaterials)
        {
            <div class="product">
                <h2 class="product-title">@item.RMAirCondition?.Name ?? "Bilgi Yok"</h2>
