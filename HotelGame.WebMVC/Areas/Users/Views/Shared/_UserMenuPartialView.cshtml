@model HotelGame.WebMVC.Models.GamePlay.GetAllPlayerRoomsViewModel;
<nav class="header-nav ms-auto">

    @if (CurrentUser != null)
    {
        <ul class="d-flex align-items-center">
            <div class="info-box">
                @if (Model.PlayerHotel != null)
                {
                    <div>
                        <span>Bakiye:</span>
                        <span class="highlight">@Model.PlayerHotel.HotelMoney TL</span>
                    </div>
                    <div>
                        <span>Kalite Puanı:</span>
                        <span class="highlight">@Model.PlayerHotel.HotelQuality *</span>
                    </div>
                    <div>
                        <span>Yorum Puanı:</span>
                        <span class="highlight">@Model.PlayerHotel.CustomerCommentPointAvarage</span>
                    </div>
                    <div>
                        <span>Otel Seviyesi:</span>
                        <span class="highlight">@Model.PlayerHotel.HotelLevel</span>
                    </div>
                }
                else
                {
                    <p>Hoşgeldiniz.</p>
                }
            </div>
            <li>
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <span class="d-none d-md-block dropdown-toggle">@CurrentUser.Name @CurrentUser.LastName</span>
                </a><!-- End Profile Iamge Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style="transform: translate3d(-20px,50px,0px);">
                    <li class="dropdown-header">
                        <h6>@CurrentUser.Name @CurrentUser.LastName</h6>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                            <i class="bi bi-person"></i>
                            <span>Hesabım</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                            <i class="bi bi-gear"></i>
                            <span>Ayarlar</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="pages-faq.html">
                            <i class="bi bi-question-circle"></i>
                            <span>Yardım</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center mb-2" asp-controller="Account" asp-area="" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Çıkış Yap</span>
                        </a>

                    </li>

                </ul><!-- End Profile Dropdown Items -->
            </li><!-- End Profile Nav -->

        </ul>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link collapsed" asp-area="" asp-controller="Account" asp-action="SignUp">
                Kayıt Ol
                <i class="bi bi-card-list"></i>
                <span>Kayıt Ol</span>
            </a>

        </li>

        <!-- End Register Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" asp-area="" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right"></i>
                <span>Giriş Yap</span>
            </a>

        </li>

        <!-- End Login Page Nav -->
    }


</nav><!-- End Icons Navigation -->
